extends ../layouts/common

block content
  h3 Show list books
  if user.isAdmin
    table.table.table-striped
      tr
        th Bìa sách
        th Tên sách
        th Mô tả
        th Update
        th Delete
      each book in books
        tr
          td
            img(src= book.coverUrl ? book.coverUrl : 'https://picsum.photos/id/1/200', style='width: 100px;')
          td= book.title
          td= book.description
          td
            a(href='/books/update/' + book.id) Update        
          td
            a(href='/books/delete/' + book.id) Delete

    a.btn.btn-primary(href='/books/create') Create book
  else
    .row
      each book in books
        .col-md-4.col-sm-6
          .card()
              img.card-img-top(src= book.coverUrl ? book.coverUrl : 'https://picsum.photos/id/1/200', style='width: 100%', alt='Card image cap')
              .card-body
                h5.card-title= book.title
                p.card-text= book.description
                a.btn.btn-primary(href='/cart/add/' + book.id) Add to Cart